@using WebAppCollections.Models
@model Books


<h1>Create </h1>

<form method="post">
    <div class="form-group"> 
    <label asp-for="Author"></label>
    <input class="form-control" asp-for="Author" /></div>
    <div class="form-group"> 
    <label asp-for="Title"></label> 
    <input class="form-control" asp-for="Title" /></div>
    <div class="form-group">
    <label asp-for="Category"></label>
    <select class="form-control" asp-for="Category" 
            asp-items="@Html.GetEnumSelectList<Category>()"></select></div>
    <div class="form-group">
    <label asp-for="Description"></label>
    <textarea class="form-control" asp-for="Description" ></textarea></div>

    <div asp-validation-summary="All">   </div>
    
    <input class="btn btn-primary" type="submit" name="save" value="Save" />
</form>